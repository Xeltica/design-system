doctype html
html
  head
    meta(charset='UTF-8')
    meta(http-equiv='X-UA-Compatible' content='IE=edge')
    meta(name='viewport' content='width=device-width,initial-scale=1')
    link(rel='stylesheet' href='/css/xeltica-ui.min.css')
    style.
      .xd-container {
        display: grid;
        grid-auto-flow: column;
        grid-auto-columns: 18rem 1fr;
      }
      .xd-footer {
        border-top: 1px solid var(--tone-3);
        padding: 1rem;
        margin-top: 2rem;
      }
      #daylight {
        background: transparent;
        font-size: 1rem;
        color: inherit;
        border: none;
        width: 100%;
        text-align: left;
      }
    block head
    block title
      title Xeltica UI

  body._container
    header.xd-header
      h1: a(href="/") Xeltica UI
      block header
    .xd-container
      .xd-sidebar
        ._menu
          h1 スタイル
          ul
            li: a(href="/style/typography.html") タイポグラフィ
            li: a(href="/style/color.html") カラー
            li: a(href="/style/device.html") デバイス
            li: a(href="/style/theme.html") デイ/ナイト
          h1 レイアウト
          ul
            li: a(href="/layout/box.html") ボックス
          h1 その他
          ul
            li: button#daylight 🌞/🌙
      .xd-main
        block main
        footer.xd-footer
          block footer
          aside (C)2021 Xeltica ・
            a(href="https://github.com/Xeltica/ui") リポジトリ
            | ・ Version #{process.env.npm_package_version}
    script.
      const btn = document.getElementById('daylight');
      btn.addEventListener('click', () => {
        document.body.classList.toggle('_dark');
      });
