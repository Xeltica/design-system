  h3 Color
  ._vstack.dense
    ._hstack.dense
      each tuple in grayscales
        - const [name, isDark] = tuple;
        .xd-colorbox._clickable(class=`bg-${name} ${isDark ? 'dark' : ''}`)= name

    ._hstack.dense
      each tuple in colors
        - const [name, isDark] = tuple;
        .xd-colorbox._clickable(class=`bg-${name} ${isDark ? 'dark' : ''}`)= name

    ._hstack.dense
      each tuple in colors
        - const [name] = tuple;
        .xd-colorbox._clickable(class=`bg-${name}-l`)= `${name}-l`

    ._hstack.dense
      each tuple in colors
        - const [name] = tuple;
        .xd-colorbox._clickable(class=`bg-${name}-d dark`)= `${name}-d`

