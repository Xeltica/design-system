    h2 Color

    -
      const grayscales = [
        ['black', true],
        ['gray-7', true],
        ['gray-6', true],
        ['gray-5', true],
        ['gray-4', true],
        ['gray-3', false],
        ['gray-2', false],
        ['gray-1', false],
        ['white', false],
      ];

      const colors = [
        ['red', true],
        ['vermilion', true],
        ['orange', false],
        ['yellow', false],
        ['lime', false],
        ['green', false],
        ['teal', false],
        ['cyan', false],
        ['skyblue', false],
        ['blue', false],
        ['indigo', true],
        ['purple', true],
        ['magenta', false],
        ['pink', false],
      ];

    .x-vstack.dense
      .x-hstack.dense
        each tuple in grayscales
          - const [name, isDark] = tuple;
          .colorbox.x-clickable(class=(isDark ? 'dark' : '') style=`background: var(--x-color-${name})`) #{name.charAt(0).toUpperCase() + name.slice(1)}
      .x-hstack.dense
        each tuple in colors
          - const [name, isDark] = tuple;
          .colorbox.x-clickable(class=(isDark ? 'dark' : '') style=`background: var(--x-color-${name})`) #{name.charAt(0).toUpperCase() + name.slice(1)}
