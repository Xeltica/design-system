extends _layout

block header
block footer

block head
  style.
    body {
      background: url("/assets/yokohama.jpg");
      background-position: center;
      background-size: cover;
      background-attachment: fixed;
      background-repeat: no-repeat;
    }
    .xd-hero-container {
      width: 100vw;
      padding: 0 16px;
      height: 100vh;
      display: flex;
      flex-direction: row;
    }
    .xd-hero-card {
      max-width: 960px;
      flex: 1;
      margin: 96px auto;
      overflow: auto;
    }
    @media (max-width: 600px) {
      .xd-hero-card {
        margin: 32px auto;
      }
    }
    .xd-belt {
      position: fixed;
    }

