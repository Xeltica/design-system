mixin item(name, href, iconClassName, isBeta)
  if href === path
    .item.active
      i.icon.fa-fw(class=iconClassName)
      != name
      if isBeta
        sup.text-dimmed Beta
  else if href === null
    .item.disabled
      i.icon.fa-fw(class=iconClassName)
      != name
      if isBeta
        sup.text-dimmed Beta
  else
    a.item(href=href)
      i.icon.fa-fw(class=iconClassName)
      != name
      if isBeta
        sup.text-dimmed Beta

