{
  "compilerOptions": {
    "target": "esnext",
    "module": "umd",
    "lib": [
      "DOM"
    ],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": [
      "node_modules/@types",
      "src/scripts/types"
    ],
    "outDir": "dist",
    "declaration": true,
    "declarationDir": "dist/",
  },
  "include": [
    "./src/**/*.ts"
  ]
}
