{
  "name": "xeltica-ui",
  "version": "0.1.0",
  "description": "UI SCSS Library of Xeltica Design System",
  "main": "dist/xeltica-ui.min.css",
  "style": "dist/xeltica-ui.min.css",
  "repository": "https://github.com/xeltica/ui",
  "author": "Xeltica",
  "license": "MIT",
  "private": false,
  "scripts": {
    "build:normal": "sass src/xeltica-ui.scss dist/css/xeltica-ui.css",
    "build:min": "sass src/xeltica-ui.scss dist/css/xeltica-ui.min.css --style compressed",
    "build:docs": "pug -o dist src/docs",
    "build": "run-p build:*",
    "watch:normal": "sass --watch src/xeltica-ui.scss dist/css/xeltica-ui.css",
    "watch:min": "sass --watch src/xeltica-ui.scss dist/css/xeltica-ui.min.css --style compressed",
    "watch:docs": "pug -w -o dist src/docs",
    "watch": "run-p watch:*",
    "launch-server": "http-server ./dist -p 4000 -c-1",
    "dev": "run-p watch launch-server"
  },
  "devDependencies": {
    "fibers": "^5.0.0",
    "http-server": "^0.12.3",
    "jstransformer-escape-html": "^1.1.0",
    "jstransformer-pug": "^0.4.0",
    "npm-run-all": "^4.1.5",
    "pug": "^3.0.2",
    "pug-cli": "pugjs/pug-cli",
    "sass": "^1.32.12"
  }
}
